<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="css/main.css">
    <link rel="icon" href="img/LOGO-COMPUTER_GAMER.png" sizes="32x32">
</head>
<body>
            <%- include('partials/navigation')%>
       <p class="titulo_home">Encuentra la PC Gamer de tus sueños</p>
    <div class="carousel-container">
        <div class="carousel">
            <!-- Imágenes dinámicas con EJS -->
            <% images.forEach((image, index) => { %>
                <img src="<%= image.src %>" class="carousel-image <%= index === 0 ? 'active' : '' %>" alt="<%= image.alt %>">
            <% }) %>
        </div>
        <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
        <button class="next" onclick="moveSlide(1)">&#10095;</button>
    </div>
    <section id="ubicacion">
        <h2>Encuéntranos aquí</h2>
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3886.3030049824843!2d-76.39033262632083!3d-13.079973061994988!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x910ff93610fb9b81%3A0xd188f57c748ca5a!2sSan%20Vicente%20De%20Ca%C3%B1ete!5e0!3m2!1ses!2spe!4v1728862820246!5m2!1ses!2spe" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </section>
    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.carousel-image');

        function showSlide(index) {
            slides.forEach((slide, i) => {
                slide.classList.remove('active');
                if (i === index) {
                    slide.classList.add('active');
                }
            });
        }

        function moveSlide(direction) {
            currentSlide += direction;
            if (currentSlide >= slides.length) {
                currentSlide = 0;
            } else if (currentSlide < 0) {
                currentSlide = slides.length - 1;
            }
            showSlide(currentSlide);
        }

        // Inicializar el carrusel
        showSlide(currentSlide);
    </script>
        <%- include('partials/footer') %>
</body>
</html>
