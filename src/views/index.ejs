<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="css/main.css">
    <link rel="icon" href="img/LOGO-COMPUTER_GAMER.png" sizes="32x32">
</head>
<body>
            <%- include('partials/navigation')%>
       <p class="titulo_home">Encuentra la PC Gamer de tus sueños</p>
    <div class="carousel-container">
        <div class="carousel">
            <!-- Imágenes dinámicas con EJS -->
            <% images.forEach((image, index) => { %>
                <img src="<%= image.src %>" class="carousel-image <%= index === 0 ? 'active' : '' %>" alt="<%= image.alt %>">
            <% }) %>
        </div>
        <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
        <button class="next" onclick="moveSlide(1)">&#10095;</button>
    </div>

    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.carousel-image');

        function showSlide(index) {
            slides.forEach((slide, i) => {
                slide.classList.remove('active');
                if (i === index) {
                    slide.classList.add('active');
                }
            });
        }

        function moveSlide(direction) {
            currentSlide += direction;
            if (currentSlide >= slides.length) {
                currentSlide = 0;
            } else if (currentSlide < 0) {
                currentSlide = slides.length - 1;
            }
            showSlide(currentSlide);
        }

        // Inicializar el carrusel
        showSlide(currentSlide);
    </script>
        <%- include('partials/footer') %>
</body>
</html>
